{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "analytics": false
  },
  "newProjectRoot": "client",
  "projects": {
    "core": {
      "projectType": "library",
      "root": "client/core",
      "sourceRoot": "client/core",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "client/core/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "client/core/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "client/core/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        }
      }
    },
    "playground": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "inlineTemplate": false,
          "inlineStyle": false,
          "style": "scss",
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:interceptor": {
          "skipTests": true
        },
        "@schematics/angular:module": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        },
        "@schematics/angular:application": {
          "skipTests": true
        }
      },
      "root": "client/playground",
      "sourceRoot": "client/playground/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/playground",
            "index": "client/playground/src/index.html",
            "main": "client/playground/src/main.ts",
            "polyfills": "client/playground/src/polyfills.ts",
            "tsConfig": "client/playground/tsconfig.app.json",
            "assets": [
              "client/playground/src/favicon.ico",
              "client/playground/src/web.config",
              "client/playground/src/assets",
              {
                "glob": "**/*",
                "input": "./assets",
                "output": "client/playground/src/assets"
              }
            ],
            "styles": [
              "theme/theme.scss"
            ],
            "scripts": [
              "node_modules/hammerjs/hammer.js"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "client/playground/src/environments/environment.ts",
                  "with": "client/playground/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "playground:build",
            "port": 3000
          },
          "configurations": {
            "production": {
              "browserTarget": "playground:build:production"
            },
            "development": {
              "browserTarget": "playground:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "playground:build"
          }
        }
      }
    }
  }
}
